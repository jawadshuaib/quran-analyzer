{
  "manifest_version": 3,
  "name": "Quran Research Tool",
  "version": "1.0.0",
  "description": "Shows related Quran verses when browsing quran.com",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["http://localhost:5000/*", "*://*.quran.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.quran.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
